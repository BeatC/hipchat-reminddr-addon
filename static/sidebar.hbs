{{define "sidebar"}}
<!DOCTYPE html>
<html>
    <head>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <script src="//aui-cdn.atlassian.com/aui-adg/6.0.6/js/aui.min.js"></script>
        <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/6.0.6/css/aui.min.css" media="all">
        <style>
            .container {
                margin: 10px;
            }
        </style>
    </head>
    <body>
    <section class="aui-connect-page ">
        <section class="aui-connect-content container">
            <form class="aui top-label">
                <div class="field-group">
                    <label for="title">Title</label>
                    <input class="text medium-field" type="text" name="title" />
                    <div class="description">Put the meeting title</div>
                </div>
                <div class="field-group">
                    <label>Message</label>
                    <textarea class="textarea"></textarea>
                    <div class="description">Invitation message for bot to send</div>
                </div>
                <div class="field-group">
                    <label for="time">Time</label>
                    <input class="text short-field" type="text" placeholder="11"/>
                    <span>:</span>
                    <input class="text short-field" type="text" placeholder="59"/>
                    <a href="#dwarfers" aria-owns="dwarfers" aria-haspopup="true" class="aui-dropdown2-trigger">Dropdown trigger</a>
                    <div id="dwarfers" class="aui-dropdown2">
                        <ul class="aui-list-truncate">
                            <li><a href="#">AM</a></li>
                            <li><a href="#">PM</a></li>
                        </ul>
                    </div>
                </div>
                <fieldset class="group">
                    <legend><span>Repeat:</span></label>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="monday" name="monday"/>
                        <label for="monday">Monday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="tuesday" name="tuesday"/>
                        <label for="tuesday">Tuesday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="wednesday" name="wednesday"/>
                        <label for="wednesday">Wednesday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="thursday" name="thursday"/>
                        <label for="thursday">Thursday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="friday" name="friday"/>
                        <label for="friday">Friday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="saturday" name="saturday"/>
                        <label for="saturday">Saturday</label>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" class="checkbox" id="sunday" name="sunday"/>
                        <label for="sunday">Sunday</label>
                    </div>
                </div>
                <div class="buttons-container">
                    <div class="buttons">
                        <button class="aui-button aui-button-primary submit" type="submit">Create</button>
                        <a class="cancel" href="/sidebar">Cancel</a>
                    </div>
                </div>
            </form>
        </section>
    </section>
</body>
</html>
{{end}}